<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidTemp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- TextView -->
    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/_11ssp</item>

        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <!-- Button -->
    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btn_text</item>
        <item name="android:background">@drawable/btn_theme</item>
        <!--<item name="android:stateListAnimator" tools:targetApi="21">@null</item>-->

        <item name="android:fontFamily">@font/font_semibold</item>
    </style>

    <!-- Button -->
    <style name="Button_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:background">@drawable/btn_theme</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:paddingRight">@dimen/_5sdp</item>

        <item name="android:fontFamily">@font/font_semibold</item>
    </style>

    <!-- EditText -->
    <style name="EditText_theme">
        <item name="colorControlNormal">@color/theme</item>
        <item name="colorControlActivated">@color/theme</item>
        <item name="colorControlHighlight">@color/theme</item>
    </style>

    <style name="TextInputLayout_error">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/tip_text</item>

        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="TextInputLayout_hint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/tip_text</item>
        <item name="android:layout_marginBottom">@dimen/_2sdp</item>

        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="EditText_black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/et_text</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>

        <item name="android:theme">@style/EditText_theme</item>
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="EditText_multiline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/et_text</item>
        <item name="android:maxLines">5</item>
        <item name="android:minLines">5</item>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">top</item>

        <item name="android:theme">@style/EditText_theme</item>
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="EditText_disable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/et_text</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <!--<item name="android:drawableRight">@drawable/ic_down_arrow</item>-->
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">false</item>
        <item name="android:longClickable">false</item>
        <item name="android:cursorVisible">false</item>

        <item name="android:theme">@style/EditText_theme</item>
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <!-- ImageView -->
    <style name="ImageView_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

    <!-- Checkbox -->
    <style name="DefaultRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:gravity">center</item>

        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <!-- Divider -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:background">@color/gray</item>
    </style>

    <!-- Tablayout -->
    <style name="DefaultTab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="textAllCaps">false</item>

        <item name="android:fontFamily">@font/font_semibold</item>
    </style>
</resources>